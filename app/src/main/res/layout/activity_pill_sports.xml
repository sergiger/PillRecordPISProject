<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Pill.PillSports">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:weightSum="80"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="0dp"
        android:background="@color/gris">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_left2"></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="           ACTIVITY"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
        </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="20">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/set_sports"
            android:focusable="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Activity"
            android:inputType="text"
            android:layout_weight="19"
            android:textColor="@color/cardview_dark_background"
            android:textColorHint="@color/cardview_dark_background"
            >
        </android.support.design.widget.TextInputEditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="20">
            <TextView
            android:id="@+id/date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From/To"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/btn_from"
            app:layout_constraintTop_toTopOf="@id/btn_from"
            app:layout_constraintBottom_toBottomOf="@id/btn_from"/>
            <Button
            android:id="@+id/btn_from"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="19"
            android:backgroundTint="@color/cardview_light_background"
            android:text=""
            android:textAllCaps="false"
            android:textAlignment="textEnd"
            >
            </Button>
    </LinearLayout>
        <TextView
            android:id="@+id/text_view_dates"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:text="EXAMPLE 21/03/2020 to 25/03/2020"
            android:gravity="center"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="20">
        <TextView
            android:id="@+id/ferquency_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequency"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/btn_frequency"
            app:layout_constraintTop_toTopOf="@id/btn_frequency"
            app:layout_constraintBottom_toBottomOf="@id/btn_frequency"/>

        <Button
            android:id="@+id/btn_frequency"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="19"
            android:backgroundTint="@color/cardview_light_background"
            android:text=""
            android:textAllCaps="false"
            android:textAlignment="textEnd"
            ></Button>
    </LinearLayout>
    <TextView
        android:id="@+id/text_view_frequency"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:text="(Frequency)"
        android:gravity="center"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="20">

            <Button
                android:id="@+id/btn_Save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/button_background"
                android:text="SAVE"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="@color/cardview_light_background"
                ></Button>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>