    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AAA"
    tools:context=".ui.calendar.FragmentOne"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <TextView
