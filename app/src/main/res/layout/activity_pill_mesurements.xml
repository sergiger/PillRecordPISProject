<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Pill.PillMesurements">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:weightSum="80"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="0dp"
        android:background="@color/gris">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_left2"></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="           MEASUREMENTS"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="Choose one:"
            android:textSize="20dp"
            android:textAlignment="gravity"
            android:gravity="center|left"></TextView>
        <Button
            android:id="@+id/btn_weight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:backgroundTint="@color/cardview_light_background"
            android:text="     Weight"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            ></Button>
        <Button
            android:id="@+id/btn_heartRate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:backgroundTint="@color/cardview_light_background"
            android:text="     Heart rate"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            ></Button>
        <Button
            android:id="@+id/btn_arterialPressure"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:backgroundTint="@color/cardview_light_background"
            android:text="     Arterial pressure"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            ></Button>
        <Button
            android:id="@+id/btn_temperature"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:backgroundTint="@color/cardview_light_background"
            android:text="     Temperature"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            ></Button>
        <Button
            android:id="@+id/btn_glucoseBefore"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:backgroundTint="@color/cardview_light_background"
            android:text="     Glucose level (before eating)"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            ></Button>
        <Button
            android:id="@+id/btn_glucoseAfter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:backgroundTint="@color/cardview_light_background"
            android:text="     Glucose level (after eating)"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            ></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>