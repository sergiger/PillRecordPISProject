<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:id="@+id/txt_weekPillName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default name"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txt_weekPillInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="as needed"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_weekPillName"
        app:layout_constraintStart_toStartOf="@+id/txt_weekPillName"/>

    <ImageView
        android:id="@+id/reminder_list_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/pill"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_weekPillName"/>

    <LinearLayout
        android:id="@+id/layout_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_weekPillName"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/Sun"
            android:text="Sun."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/Mon"
            android:text="Mon."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/Tue"
            android:text="Tue."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/Wed"
            android:text="Wed."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/Thu"
            android:text="Thu."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/Fri"
            android:text="Fri."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/Sat"
            android:text="Sat."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_days"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_check_box_24dp"
            android:layout_gravity="center" />
        <ImageView
            android:id="@+id/img_radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_box_24dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/img_radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_box_24dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center" />
        <ImageView
            android:id="@+id/img_radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_box_24dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/img_radio5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_box_24dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/img_radio6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_box_24dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/img_radio7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_box_24dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>