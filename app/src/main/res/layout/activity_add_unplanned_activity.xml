<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.today.AddUnplannedActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_unplanned_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/ic_arrow_back_white_24dp"
        app:backgroundTint="@color/transparent"
        app:elevation="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\t\tActivity"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/activity_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/activity_name_button"
        app:layout_constraintTop_toTopOf="@id/activity_name_button"
        app:layout_constraintBottom_toBottomOf="@id/activity_name_button"/>

    <Button
        android:id="@+id/activity_name_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@color/transparent"
        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
        android:drawableTint="@color/colorApp3"
        android:selectAllOnFocus="true"
        android:shadowColor="#FFFFFF"
        android:text="Running"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/colorApp3"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_unplanned_activity"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/duration_button"
        app:layout_constraintTop_toTopOf="@id/duration_button"
        app:layout_constraintBottom_toBottomOf="@id/duration_button"/>

    <Button
        android:id="@+id/duration_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@color/transparent"
        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
        android:drawableTint="@color/colorApp3"
        android:selectAllOnFocus="true"
        android:shadowColor="#FFFFFF"
        android:text="15 min"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/colorApp3"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/activity_name_button"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/info_button"
        app:layout_constraintTop_toTopOf="@id/info_button"
        app:layout_constraintBottom_toBottomOf="@id/info_button"/>

    <Button
        android:id="@+id/info_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@color/transparent"
        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
        android:drawableTint="@color/colorApp3"
        android:selectAllOnFocus="true"
        android:shadowColor="#FFFFFF"
        android:text="Today"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/colorApp3"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/duration_button"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/hour_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hour"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/hour_button_unplanned_activity"
        app:layout_constraintTop_toTopOf="@id/hour_button_unplanned_activity"
        app:layout_constraintBottom_toBottomOf="@id/hour_button_unplanned_activity"/>

    <Button
        android:id="@+id/hour_button_unplanned_activity"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@color/transparent"
        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
        android:drawableTint="@color/colorApp3"
        android:selectAllOnFocus="true"
        android:shadowColor="#FFFFFF"
        android:text="15:00"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/colorApp3"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/info_button"
        tools:layout_editor_absoluteX="16dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/tick_unplanned_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:elevation="4dp"
        android:tint="#4CAF50"
        app:backgroundTint="@color/transparent"
        app:fabCustomSize="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="70dp"
        app:srcCompat="@drawable/ic_tick" />

</androidx.constraintlayout.widget.ConstraintLayout>