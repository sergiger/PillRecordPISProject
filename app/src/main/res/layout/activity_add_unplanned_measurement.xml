<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.today.AddUnplannedMeasurement">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_unplanned_measurement"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/ic_arrow_back_white_24dp"
            app:backgroundTint="@color/transparent"
            app:elevation="0dp"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\t\tMeasurement"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/measurement_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Measurement"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/measurement_spinner"
        app:layout_constraintTop_toTopOf="@id/measurement_spinner"
        app:layout_constraintBottom_toBottomOf="@id/measurement_spinner"/>

    <Spinner
        android:id="@+id/measurement_spinner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:entries="@array/statistics_array"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/colorApp3"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_unplanned_measurement" />



    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/date_button"
        app:layout_constraintTop_toTopOf="@id/date_button"
        app:layout_constraintBottom_toBottomOf="@id/date_button"/>

    <Button
        android:id="@+id/date_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@color/transparent"
        android:selectAllOnFocus="true"
        android:shadowColor="#FFFFFF"
        android:text="Today"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/colorApp3"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/measurement_spinner" />

    <TextView
        android:id="@+id/hour_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hour"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/hour_button_unplanned_measurement"
        app:layout_constraintTop_toTopOf="@id/hour_button_unplanned_measurement"
        app:layout_constraintBottom_toBottomOf="@id/hour_button_unplanned_measurement"/>

    <Button
        android:id="@+id/hour_button_unplanned_measurement"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@color/transparent"
        android:selectAllOnFocus="true"
        android:shadowColor="#FFFFFF"
        android:text="15:00"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/colorApp3"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/date_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/tick_unplanned_measurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:elevation="4dp"
        android:tint="#4CAF50"
        app:backgroundTint="@color/transparent"
        app:fabCustomSize="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="70dp"
        app:srcCompat="@drawable/ic_tick" />

</androidx.constraintlayout.widget.ConstraintLayout>