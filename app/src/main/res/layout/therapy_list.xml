<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/therapy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="Default name"
        android:textSize="24sp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/therapy_list_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/therapy_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Information"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/therapy_name"
        app:layout_constraintStart_toEndOf="@+id/therapy_list_image"/>

    <TextView
        android:id="@+id/therapy_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:text="Frequency"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/therapy_info"
        app:layout_constraintStart_toEndOf="@+id/therapy_list_image"/>

    <ImageView
        android:id="@+id/therapy_list_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/pill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>