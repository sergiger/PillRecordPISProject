<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">
    <Button
        android:id="@+id/btn_pillWeek"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent" />
    <TextView
        android:id="@+id/txt_PillDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:text="Date"
        android:textSize="20sp"
        android:textColor="@color/colorApp3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reminder_list_image"/>
    <TextView
        android:id="@+id/txt_PillName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advil 200 mg"
        android:textSize="16sp"
        android:textColor="#0F0000"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_PillDate"
        app:layout_constraintStart_toStartOf="@+id/txt_PillDate"/>
    <TextView
        android:id="@+id/txt_PillInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 piil(s)"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_PillName"
        app:layout_constraintStart_toStartOf="@+id/txt_PillDate"/>

    <TextView
        android:id="@+id/txt_PillHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:10"
        android:textSize="16sp"
        android:textColor="#0FF000"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@+id/txt_PillInfo"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/reminder_list_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pill"
        android:layout_marginTop="4dp"
        android:layout_marginRight="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>